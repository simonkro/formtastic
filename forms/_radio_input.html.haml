%div{:id => id, :class => "#{as}#{' required' if required} field#{' field-error' unless msgs.blank?}"}
  = builder.label method, humanized_attribute_name, label_html

  .radio-options
    - collection.each do |label, value| value ||= label
      = builder.radio_button input_name, value, input_html
      = builder.label "#{input_name}_#{value}", label

  - unless msgs.blank?
    %span.error-hint= msgs.first
