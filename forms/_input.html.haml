%div{:id => id, :class => "#{as} #{required} field#{' field-error' unless msgs.blank?}"}
  = builder.label method, humanized_attribute_name
  = case as
    - when :string then builder.text_field method
    - when :password then builder.password_field method
    - when :numeric then builder.text_field method
    - when :text then builder.text_area method
    - when :file then builder.file_field method
  - if required == :required
    %span.required-icon.tooltip Required
  - unless msgs.blank?
    %span.error-hint= msgs.first

